<div class="container-fluid">
  <div class="row">
    <div class="col-md-9">

      <h1><%=t(:customers_list)%></h1>
      <br></br>

      <table class="table table-striped table-borderless">
        <thead>
          <tr>
            <th><%=t(:name)%></th>
            <th><%=t(:phone)%></th>
            <th><%=t(:description)%></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody class="no-border-x">
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.name %></td>
            <td><%= customer.fone %></td>
            <td><%= customer.description %></td>
            <td><%= link_to t(:show), customer %></td>
            <td><%= link_to t(:edit), edit_customer_path(customer) %></td>
            <td><%= link_to t(:destroy), customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        </tbody>

      </div>
      <% end %>
      <%= link_to t(:new_customer), new_customer_path, {:style=>'color:#FFFFFF;', class: 'btn btn-rounded btn-space btn-primary'} %>
    </div>
  </div>
</div>
