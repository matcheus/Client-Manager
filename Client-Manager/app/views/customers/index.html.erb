<div class="container-fluid">
  <div class="row">
    <div class="col-md-9">

      <h1><%= t('views.customers.customers_list') %></h1>
      <br></br>

      <table class="table table-striped table-borderless">
        <thead>
          <tr>
            <th><%= t('activerecord.attributes.customer.name') %></th>
            <th><%= t('activerecord.attributes.customer.phone') %></th>
            <th><%= t('activerecord.attributes.customer.description') %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody class="no-border-x">
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.name %></td>
            <td><%= customer.fone %></td>
            <td><%= customer.description %></td>
            <td><%= link_to t('views.customers.show'), customer %></td>
            <td><%= link_to t('views.customers.edit'), edit_customer_path(customer) %></td>
            <td><%= link_to t('views.customers.destroy'), customer, method: :delete, data: { confirm: t('views.devise.are_you_sure') } %></td>
          </tr>
        </tbody>

      </div>
      <% end %>
      <%= link_to t('views.customers.new_customer'), new_customer_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
