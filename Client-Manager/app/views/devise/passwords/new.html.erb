<h2><%= t('views.devise.forgot')%></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label t('views.devise.email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: t('views.devise.email') %>
  </div>

  <div class="actions">
    <%= f.submit t('views.devise.send') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
