<div class="container-fluid">
  <div class="userdiv">
      <h2><%= t(:login) %></h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
        	<%= f.label t('views.devise.email') %>
        	<%= f.email_field :email, autofocus: true, class: "form-control", required: false %>
        </div>

        <div class="form-group">
        	<%= f.label t('views.devise.password') %>
        	<%= f.password_field :password, class: "form-control", required: false %>
        </div>

        <div class="checkbox">
        	<label>
        	   <%= f.check_box :remember_me, required: false, as: :boolean if devise_mapping.rememberable? %><%= t('views.devise.sessions.remember') %>
      		</label>
        </div>

        <div class="form-group">
        	<%= f.submit t('views.devise.sign_in'), class: "btn btn-primary" %>
        </div>

      <% end %>

      <%= render "devise/shared/links" %>
  </div>
</div>
